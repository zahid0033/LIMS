<%- include('../../template/header') -%>

<div style="margin: 1rem";>
    <h1 class="text-center" style='margin-top:1em'>Add Employee Details</h1>
    <div class="container">
        <div class="">
            <div class="cover-container d-flex w-100 h-100 p-3 mx-auto flex-column">
                <div style="background: #e3e3e380;
                padding: 50px;">
                    <form method="post">

                        <div class="form-group">
                            <label for="validationDefault05">Name</label>
                            <input type="text" class="form-control" id="validationDefault07" name="storage" required>
                        </div>

                        <div class="form-group">
                            <label for="validationDefault02">Present Address</label>
                            <input type="text" class="form-control" id="validationDefault02" name="seller" required>
                        </div>

                        <div class="row">

                            <div class="col-md-4">
