                                    <label for="validationDefault04">Duty Time</label>
                                    <input type="date" class="form-control" id="validationDefault04" name="age" required>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label for="validationDefault03">Associated Lab</label>
                                    <input type="text" class="form-control" id="validationDefault03" name="package_size" required>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label for="validationDefault02">Mobile Number</label>
                                    <input type="text" class="form-control" id="validationDefault02" name="seller" required>
                                </div>
                            </div>

                        </div>
                        

                        <button type="submit" value="Submit" class="btn btn-primary">Submit</button>
                    </form>
                </div>

            </div>
        </div>
    </div>
</div>


